        <!--android:id="@+id/AddressTwo"-->
        <!--android:layout_width="339dp"-->
        <!--android:layout_height="52dp"-->
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginTop="24dp"-->
        <!--android:layout_marginEnd="8dp"-->
        <!--android:autofillHints=""-->
